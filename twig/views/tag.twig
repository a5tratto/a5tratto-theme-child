{% extends "index.twig" %}
{% block content %}
	<div class="container">
		<div class="row">
			<div class="col-12">
				<h1>Tag</h1>
				<h3>title: {{ title }}</h3>
				<p>Decrizione {{ term.description }}</p>
			</div>
		</div>
	</div>
	<div class="container">
		<div class="row">
			<div class="col-12">
				<label>Vista dei risultati da <b>{{startpost}}</b> a <b>{{endpost}}</b> di <b>{{found_posts}}</b> </label>
			</div>
		</div>
	</div>
	<div class="container">
		<div class="row">
            {% for post in posts %}
                {% include ['tease-'~post.post_type~'.twig', 'tease.twig'] %}
            {% endfor %}
            {% include 'partial/pagination.twig' with { pagination: posts.pagination({show_all: false, mid_size: 3, end_size: 2}) } %}
		</div>
	</div>
{% endblock %}